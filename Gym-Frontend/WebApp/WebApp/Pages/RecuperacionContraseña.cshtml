@page
@model RecuperacionDeContraseñaModel
@{
}
<script src="~/js/pages/recuperacionclave.js"></script>
<div class="container" style="margin-top: 14rem !important;">
    <div
        class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Recuperar Contraseña</div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label for="emailtxt" class="form-label">Correo electrónico</label>
                            <input type="email" class="form-control"
                                   id="emailtxt" aria-describedby="emailHelp">
                            <div id="emailHelp" class="form-text">
                                Introduzca el correo electrónico
                                asociado a su cuenta.
                            </div>
                        </div>
                        <button id="btnGetNewP" type="button" class="btn btn-primary">Recuperar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>