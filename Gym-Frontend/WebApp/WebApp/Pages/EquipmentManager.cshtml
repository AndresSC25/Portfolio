@page
@model EquipmentManagerModel
@{ }


<script src="~/js/pages/equipment.js"></script>
<link href="~/css/gestionrolstyle.css" rel="stylesheet"/>


<div class="bs-docs-section">
    <div style="height: 3.125rem;"></div>
    <div class="header-container d-flex justify-content-between ">
        <h1>Gestor de equipos</h1>
        <div class="d-flex align-items-center">
            <button class="btn btn-back rounded-3 " onclick="history.back()">
                <span class="material-icons-outlined material-symbols-outlined">arrow_back</span>
            </button>
        </div>
    </div>
    <div style="height: 3.125rem;"></div>


    <div class="col-lg-12">
        <table id="tblEquipment" class="display row-border compact hover" style="width: 100%">
            <thead style="background-color: rgb(240, 181, 58)">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Ubicación</th>
                <th>Descripción</th>
                <th>Creado</th>
            </tr>
            </thead>
            @* <tbody>

            </tbody> *@
        </table>
    </div>
    <div style="height: 3.125rem;"></div>

    <form class="p-4 border rounded shadow-sm bg-light form-container">
        <fieldset>
            <div class="form-header mb-1">
                <h4>Formulario para registro de equipo</h4>
            </div>
            <div class="form-group">
                <label for="txtName" class="form-label mt-4">Nombre</label>
                <input id="txtName" type="text" class="form-control" aria-describedby="emailHelp" placeholder="Ingresa el nombre...">
            </div>
            <div class="form-group">
                <label for="txtId" class="form-label mt-4">Id</label>
                <input id="txtId" readonly="readonly" type="number" class="form-control" aria-describedby="emailHelp">

            </div>
            <div class="form-group">
                <label for="txtLocation" class="form-label mt-4">Ubicación</label>
                <select id="txtLocation" class="form-control">
                    <option value="" disabled selected>Selecciona una ubicación...</option>
                    <option value="Sala de Pesas">Sala de Pesas</option>
                    <option value="Área Funcional">Área Funcional</option>
                    <option value="Sala de Gimnasio">Sala de Gimnasio</option>
                    <option value="Sala de Cardio">Sala de Cardio</option>
                    <option value="Sala de Estudio">Sala de Estudio</option>
                </select>
            </div>
            <div class="form-group">
                <label for="txtDescription" class="form-label mt-4">Descripción</label>
                <input id="txtDescription" type="text" class="form-control" aria-describedby="emailHelp" placeholder="Ingresa la descripción...">
            </div>
        </fieldset>

        <div class="form-buttons mt-3">
            <button id="btnCreate" class="source-button btn btn-primary btn-xs" type="button" tabindex="0">
                Crear
            </button>
            <button id="btnUpdate" class="source-button btn btn-info btn-xs" type="button" tabindex="0">
                Actualizar
            </button>
        </div>
    </form>

    <div style="height: 3.125rem;"></div>

</div>