@page
@model MakeInvoiceModel
@{
}


<link href="~/css/gestionrolstyle.css" rel="stylesheet"/>


<div class="bs-docs-section">
    <div class="container">
        <div style="height: 3.125rem;"></div>
        <div class="header-container d-flex justify-content-between ">
            <h1>Confirmación de pago</h1>
            <div class="d-flex align-items-center">
                <button class="btn btn-back rounded-3 " onclick="history.back()">
                    <span class="material-icons-outlined material-symbols-outlined">arrow_back</span>
                </button>
            </div>
        </div>
        <div style="height: 3.125rem;"></div>
        <h3>Seleccione una membresía</h3>
        <div class="col-lg-12 table-responsive">
            <table id="tblMemberships" class="display row-border compact hover" style="width: 100%">
                <thead style="background-color: rgb(240, 181, 58)">
                <tr>
                    <th>Id</th>
                    <th>Tipo</th>
                    <th>Cantidad de Clases Permitidas</th>
                    <th>Costo Mensual</th>

                </tr>
                </thead>
            </table>
        </div>
        <div style="height: 3.125rem;"></div>
        <h3>Seleccione descuento en caso de aplicar</h3>
        <div class="col-lg-12 table-responsive">
            <table id="tblDiscount" class="display row-border compact hover" style="width: 100%">
                <thead style="background-color: rgb(240, 181, 58)">
                <tr>
                    <th>Id</th>
                    <th>Tipo</th>
                    <th>Cupon</th>
                    <th>Porcentaje(%)</th>
                    <th>Valido desde</th>
                    <th>Hasta</th>
                    <th>Creado</th>


                </tr>
                </thead>
            </table>
        </div>
        <div style="height: 3.125rem;"></div>
        <h3>Clases personales por pagar</h3>
        <div class="col-lg-12 table-responsive">
            <table id="tblPersonalT" class="display row-border compact hover" style="width: 100%">
                <thead style="background-color: rgb(240, 181, 58)">
                <tr>
                    <th>Id</th>
                    <th>Entrenador</th>
                    <th>Fecha</th>
                    <th>Hora de entrada</th>
                    <th>Hora de salida</th>
                    <th>Costo por hora</th>
                    <th>Pagada</th>


                </tr>
                </thead>
            </table>
        </div>

        <div style="height: 3.125rem;"></div>

        <div class="card">
            <div class="card-header text-center">
                <h2>Vista previa de factura</h2>
            </div>
            <div class="card-body">
                <!-- Nombre de la persona -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Nombre:</strong> <span id="personName"></span>
                    </div>
                    <div class="col-md-6 text-md-right">
                        <strong>Fecha:</strong> <span id="invoiceDate"></span>
                    </div>
                </div>

                <!-- Detalles de la matrícula -->
                <div class="row mb-3">
                    <div class="col-md-12">
                        <h5>Detalles de la Matrícula</h5>
                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th>Matrícula</th>
                                <th>Precio (₡)</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>
                                    <span id="membershipType">[Seleccione un tipo de membresía]</span>
                                </td>
                                <td>
                                    <span id="membershipPrice"></span>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Detalles de clases personales -->
                <div class="row mb-3">
                    <div class="col-md-12">
                        <div id="personalClassesDetailsSection" style="display: none;">
                            <h5>Detalles de Clases Personales</h5>
                            <table class="table table-bordered" id="tblInvoiceDetails">
                                <thead>
                                <tr>
                                    <th>Clase</th>
                                    <th>Entrenador</th>
                                    <th>Cantidad (Horas)</th>
                                    <th>Precio por hora (₡)</th>
                                    <th>Total (₡)</th>
                                </tr>
                                </thead>
                                <tbody>
                                <!-- Aqui voy a cargar los detalles en base a tblPersonalT -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Resumen de la factura -->
                <div class="row mb-3">
                    <div class="col-md-12 text-right">
                        <h5>Resumen</h5>
                        <table class="table table-bordered">
                            <tbody>
                            <tr>
                                <td>
                                    <strong>Monto Total:</strong>
                                </td>
                                <td>₡<span id="totalAmount">[Seleccione un tipo de membresía]</span></td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Descuento:</strong>
                                </td>
                                <td>₡<span id="discountAmount">[Seleccione un tipo de membresía]</span></td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Total Después del Descuento:</strong>
                                </td>
                                <td>₡<span id="amountAfterDiscount">[Seleccione un tipo de membresía]</span></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="container my-5">
                    <div class="form-group">
                        <label for="paymentMethod">Método de Pago:</label>
                        <select class="form-control" id="paymentMethod">
                            <option value="" disabled selected>Selecciona un método de pago...</option>
                            <option value="Transferencia">Transferencia</option>
                            <option value="SINPE">SINPE</option>
                            <option value="Efectivo">Efectivo</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-white h-100">space</div>

        <div class="form-buttons">
            <button id="btnConfirm" class="source-button btn btn-primary btn-xs" type="button" tabindex="0">
                Confirmar pago
            </button>
        </div>
    </div>
    <div style="height: 3.125rem;"></div>

</div>


<script src="~/js/pages/invoiceuser.js"></script>