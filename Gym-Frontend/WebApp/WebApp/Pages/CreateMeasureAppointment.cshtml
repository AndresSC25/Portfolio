@page
@model CreateMeasureAppointmentModel
@{
}
<script src="~/js/pages/meeting.js"></script>
<link href="~/css/gestionrolstyle.css" rel="stylesheet"/>
<div class="container mb-10">
    <div style="height: 3.125rem;"></div>
    <div class="header-container d-flex justify-content-between ">
        <h1>Agendar cita de medición</h1>
        <div class="d-flex align-items-center">
            <button class="btn btn-back rounded-3 " onclick="history.back()">
                <span class="material-icons-outlined material-symbols-outlined">arrow_back</span>
            </button>
        </div>
    </div>

    <div style="height: 3.125rem;"></div>
    <hr/>
    <div style="height: 3.125rem;"></div>
    <div>
        <h2 class="mb-4">Seleccione un entrenador</h2>
        <div class="col-lg-12 table-responsive">
            <table id="tblTrainers" class="display row-border compact hover" style="width: 100%">
                <thead style="background-color: rgb(240, 181, 58)">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th class="d-none">Correo</th>
                    <th data-toggle="tooltip" title="El horario se muestra con las siglas de los dias eg: LK es Lunes y Martes">Horario</th>
                    <th>Hora de entrada</th>
                    <th>Hora de salida</th>
                </tr>
                </thead>
                @* <tbody>

                </tbody> *@
            </table>
        </div>
        <div style="height: 3.125rem;"></div>
        <h2 class="mb-4">Seleccione un cliente</h2>
        <div class="col-lg-12 table-responsive">
            <table id="tblClients" class="display row-border compact" style="width: 100%">
                <thead style="background-color: rgb(240, 181, 58)">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Correo electrónico</th>
                    <th>Número telefónico</th>
                </tr>
                </thead>
                @* <tbody>

                </tbody> *@
            </table>
        </div>
    </div>
    <div style="height: 3.125rem;"></div>


    <form class="p-4 border rounded shadow-sm bg-light form-container mt-5">
        <div class="form-header mb-4">
            <h4>Formulario para cita</h4>
        </div>
        <fieldset>
            <div class="form-group d-none">
                <label for="txtIdTrainer" class="form-label mt-4">Id Entrenador</label>
                <input id="txtIdTrainer" readonly="readonly" type="number" class="form-control" aria-describedby="emailHelp"/>

            </div>
            <div class="form-group">
                <label for="txtNameTrainer" class="form-label mt-4">Nombre del entrenador</label>
                <input id="txtNameTrainer" readonly="readonly" type="text" class="form-control" aria-describedby="emailHelp"/>

            </div>
            <div class="form-group d-none">
                <label for="txtIdClient" class="form-label mt-4">Id Cliente</label>
                <input id="txtIdClient" readonly="readonly" type="number" class="form-control" aria-describedby="emailHelp"/>

            </div>
            <div class="form-group">
                <label for="txtNameClient" class="form-label mt-4">Nombre del cliente</label>
                <input id="txtNameClient" readonly="readonly" type="text" class="form-control" aria-describedby="emailHelp"/>

            </div>
            <div class="form-group">
                <label for="txtDate" class="form-label mt-4">Fecha para la cita</label>
                <input id="txtDate" type="date" class="form-control" aria-describedby="emailHelp" placeholder="Ingresa la fecha deseada..."/>
            </div>

            <div class="form-group">
                <label for="txtTimeIn" class="form-label mt-4">Hora de inicio</label>
                <input id="txtTimeIn" type="time" class="form-control" aria-describedby="emailHelp" placeholder="Ingrese la hora de inicio..."/>
            </div>

            <div class="form-group my-4">
                <button id="btnCreate" class="source-button btn btn-primary btn-xs" type="button" tabindex="0">Crear cita</button>
            </div>
        </fieldset>
    </form>


    <div style="height: 3.125rem;"></div>
</div>