@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
    <link href="~/css/home.css" rel="stylesheet"/>
}
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border: 1px solid #5DADE2; border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://cdn.pixabay.com/photo/2017/09/27/18/52/gym-2793007_1280.jpg"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; height: 100%; object-fit: cover;"/>
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form>

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <img src="imgs/logo.png" alt="MiGym logo" style="border-radius: 50%; height: 100px; margin-right: 15px; width: 150px;"/>
                                        <span class="h1 fw-bold mb-0" style="color: #ff6219;">Silueta Club Fitness</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Inicia sesión en tu cuenta</h5>

                                    <fieldset>
                                        <div class="form-outline mb-4">
                                            <input type="email" id="InputEmail" class="form-control form-control-lg" placeholder="Correo electrónico" aria-label="Correo electrónico" required/>
                                            <label class="form-label" for="InputEmail">Correo electrónico</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" id="InputPassword" class="form-control form-control-lg" placeholder="Contraseña" aria-label="Contraseña" autocomplete="off" required/>
                                            <label class="form-label" for="InputPassword">Contraseña</label>
                                        </div>
                                    </fieldset>

                                    <div class="pt-1 mb-4">
                                        <button type="button" id="btnLogIn" class="btn btn-dark btn-lg btn-block">Ingresar</button>
                                    </div>

                                    <a class="small text-muted" href="/RecuperacionContraseña" style="text-decoration: underline;">Olvidé mi contraseña</a>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script src="~/js/Pages/LogIn.js"></script>
<script>
    document.addEventListener('DOMContentLoaded',
        function() {
            var isAuthenticated = sessionStorage.getItem("IsAuthenticated");
            if (isAuthenticated === "true") {
                window.location.href = "/Menu";
            }
        });
</script>