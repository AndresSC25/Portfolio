@page
@model GenerateCouponsModel
@{
}

<div class="bs-docs-section">
    <div class="row">
        <div class="col-lg-6">
            <div class="bs-component">
                <form>
                    <fieldset>
                        <legend>Generar Cupones de Descuento</legend>
                        <div class="form-group">
                            <label for="txtName" class="form-label mt-4">Nombre</label>
                            <input id="txtName" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="percentNumber" class="form-label mt-4">Porcentaje de Descuento (%)</label>
                            <input id="percentNumber" type="number" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="txtDiscount" class="form-label mt-4">Cupon Generado</label>
                            <input id="txtDiscount" type="text" class="form-control" readonly>
                        </div>
                    </fieldset>
                </form>
                <br/>
                <button id="btnCreate" class="source-button btn btn-primary btn-xs" type="button" tabindex="0">
                    <i class="bi bi-code">Generar</i>
                </button>
            </div>
        </div>
    </div>
</div>