@page
@model DiscountManagerModel
@{
}
<link href="~/css/gestionrolstyle.css" rel="stylesheet"/>

<div class="bs-docs-section">
    <div class="row">
        <div style="height: 3.125rem;"></div>
        <div class="header-container d-flex justify-content-between ">
            <h1>Descuentos</h1>
            <div class="d-flex align-items-center">
                <button class="btn btn-back rounded-3" onclick="history.back()">
                    <span class="material-icons-outlined material-symbols-outlined">arrow_back</span>
                </button>
            </div>
        </div>
        <div style="height: 3.125rem;"></div>
        <div class="col-lg-12">
            <table id="tblDiscounts" class="display row-border compact hover" style="width: 100%">
                <thead style="background-color: rgb(240, 181, 58)">
                <tr>
                    <th>Id</th>
                    <th>Tipo</th>
                    <th>Cupon</th>
                    <th>Porcentaje</th>
                    <th>Válido Desde</th>
                    <th>Válido Hasta</th>
                    <th>Creado</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>

    <div class="row">

        <form class="p-4 border rounded shadow-sm bg-light form-container">
            <fieldset>
                <h4 class="form-header">Registro de Descuentos</h4>
                <div class="form-group">
                    <label for="txtId" class="form-label mt-4">ID de Descuento</label>
                    <input id="txtId" readonly="readonly" type="number" class="form-control">
                </div>
                <div class="form-group">
                    <label for="txtType" class="form-label mt-4">Tipo</label>
                    <input type="text" class="form-control" id="txtType" placeholder="Ingrese el tipo de descuento">
                </div>
                <div class="form-group">
                    <label for="txtCoupon" class="form-label mt-4">Cupon</label>
                    <input type="text" class="form-control" id="txtCoupon" placeholder="Ingrese el código del cupón">
                </div>
                <div class="form-group">
                    <label for="txtPercentage" class="form-label mt-4">Porcentaje</label>
                    <input type="number" class="form-control" id="txtPercentage" placeholder="Ingrese el porcentaje de descuento">
                </div>
                <div class="form-group">
                    <label for="txtValidFrom" class="form-label mt-4">Válido Desde</label>
                    <input type="datetime-local" class="form-control" id="txtValidFrom">
                </div>
                <div class="form-group">
                    <label for="txtValidTo" class="form-label mt-4">Válido Hasta</label>
                    <input type="datetime-local" class="form-control" id="txtValidTo">
                </div>
            </fieldset>
            <div class="form-group my-4">
                <button id="btnCreate" class="source-button btn btn-primary btn-xs" type="button" tabindex="0">
                    <i class="bi bi-code">Crear</i>
                </button>
                <button id="btnUpdate" class="source-button btn btn-info btn-xs" type="button" tabindex="0">
                    <i class="bi bi-code">Actualizar</i>
                </button>
                <button id="btnDelete" class="source-button btn btn-danger btn-xs" type="button">
                    <i class="bi bi-code">Eliminar</i>
                </button>
            </div>
        </form>
        <br/>
        <div style="height: 3.125rem;"></div>
    </div>
</div>

<script src="~/js/pages/Discount.js"></script>